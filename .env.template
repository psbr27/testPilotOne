# TestPilot Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# SSH Connection Settings
# Host 1 Configuration
HOST1_HOSTNAME=your.host1.com
HOST1_USERNAME=your_username
HOST1_PASSWORD=your_password
HOST1_SSH_KEY_PATH=/path/to/your/private/key
HOST1_NAMESPACE=default

# Host 2 Configuration
HOST2_HOSTNAME=your.host2.com
HOST2_USERNAME=your_username
HOST2_PASSWORD=your_password
HOST2_SSH_KEY_PATH=/path/to/your/private/key
HOST2_NAMESPACE=default

# Additional Hosts (add as needed)
# HOST3_HOSTNAME=
# HOST3_USERNAME=
# HOST3_PASSWORD=
# HOST3_SSH_KEY_PATH=
# HOST3_NAMESPACE=

# Application Settings
TESTPILOT_LOG_LEVEL=INFO
TESTPILOT_LOG_DIR=logs
TESTPILOT_SSH_TIMEOUT=30
TESTPILOT_SSH_MAX_RETRIES=3

# Kubernetes Settings
K8S_NAMESPACE=default
K8S_CONTEXT=your-context

# Security Settings
# Set to 'true' to skip host key verification (not recommended for production)
SSH_SKIP_HOST_KEY_CHECK=false

# Notes:
# - Use either SSH key or password authentication, not both
# - Store SSH keys outside the project directory with proper permissions (600)
# - For production use, consider using a secrets management service
